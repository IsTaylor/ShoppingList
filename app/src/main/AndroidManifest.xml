<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.owner.shoppinglist">

    <application
        android:name=".ListApplication"
        android:allowBackup="true"
        android:icon="@drawable/watermelon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/watermelon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShoppingList"
            android:label="@string/title_activity_shopping_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".AddItem"
            android:label="@string/title_activity_add_item"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>